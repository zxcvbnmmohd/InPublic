{
    "name": "inpublic-server",
    "version": "1.0.0",
    "description": "The backend for InPublic App and Dashboard",
    "author": "Mohamed Mohamed",
    "license": "MIT",
    "main": "build/src/server.js",
    "scripts": {
        "build": "rm -rf build && tsc --pretty",
        "start:dev": "NODE_ENV=development nodemon -e ts --exec ts-node -r tsconfig-paths/register ./src/server.ts",
        "start:staging": "NODE_ENV=staging nodemon",
        "start:prod": "NODE_ENV=production nodemon",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "logging": "^3.3.0",
        "module-alias": "^2.2.2",
        "mongoose": "^6.9.1",
        "validator": "^13.9.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^4.9.5"
    },
    "_moduleAliases": {
        "@/configs": "build/src/configs",
        "@/controllers": "build/src/controllers",
        "@/middlewares": "build/src/middlewares",
        "@/models": "build/src/models",
        "@/routes": "build/src/routes",
        "@/services": "build/src/services",
        "@/utilities": "build/src/utilities"
    }
}
